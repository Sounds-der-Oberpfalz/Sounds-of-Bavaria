<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sqLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:orientation="vertical" >

    <de.mi.soundsofbavaria.SquareLayout
        android:id="@+id/squareLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@drawable/details"
        android:gravity="center"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_weight="0.8" >

            <TextView
                android:id="@+id/text2"
                style="?android:textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/details"
                android:layout_alignTop="@+id/details"
                android:layout_margin="32dp"
                android:gravity="center"
                android:text="@string/bside"
                android:textColor="#333"
                android:textStyle="bold"
                />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/desc"
                style="?android:textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="0.3"
                android:background="@drawable/blueborder"
                android:gravity="center"
                android:text="@string/desc"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lyrics"
                style="?android:textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="0.3"
                android:background="@drawable/whiteborder"
                android:gravity="center"
                android:text="@string/lyrics"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info2"
                style="?android:textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="0.3"
                android:background="@color/blue"
                android:gravity="center"
                android:text="@string/cover"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </de.mi.soundsofbavaria.SquareLayout>

</RelativeLayout>